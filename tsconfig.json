{
  "compilerOptions": {
    "module": "commonjs",
    "composite": true,
    "moduleResolution": "node",
    "removeComments": true,

    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "target": "es2019",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": [
      "es2019"
    ]
  }
}
