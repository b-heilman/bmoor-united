{
  "name": "bmoor-united",
  "version": "0.1.0",
  "workspaces": [
    "packages/js/*"
  ],
  "type": "module",
  "engines": {
    "node": ">=14",
    "npm": ">=8"
  },
  "private": true,
  "author": "Brian Heilman <das.ist.junk@gmail.com>",
  "description": "A collection of data management and engineering libraries",
  "license": "MIT",
  "homepage": "https://github.com/b-heilman/bmoor-united#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/b-heilman/bmoor-united.git"
  },
  "bugs": {
    "url": "https://github.com/b-heilman/bmoor-united/issues"
  },
  "devDependencies": {
    "@apollo/server": "^4.10.4",
    "@changesets/changelog-github": "^0.4.6",
    "@changesets/cli": "^2.24.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.39",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "chai": "^4.3.6",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "mocha": "^10.4.0",
    "prettier": "^3.0.3",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.3.4",
    "typescript": "^5.4.5",
    "yargs": "^15.3.1"
  },
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:workspaces": "npm run lint --workspaces",
    "test": "turbo run test",
    "test:workspaces": "npm run test --workspaces",
    "test:file": "NODE_OPTIONS=\"--import=@bmoor/bootstrap/src/node-typescript.js\" mocha -r ts-node/register",
    "test:simple": "NODE_OPTIONS=\"--import=@bmoor/bootstrap/src/node-typescript.js\" mocha -r ts-node/register --recursive \"./packages/js/*/src/**/*.spec.ts\"",
    "prettier": "npx prettier --write ./packages/js/*/src",
    "validate": "npm run lint &&  npm run test",
    "finalize": "npm run prettier && npm run validate",
    "version:bump": "changeset add",
    "version": "npm run finalize && changeset version",
    "publish": "changeset publish"
  }
}
